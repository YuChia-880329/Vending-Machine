		<servlet-name>tempAddShoppingCartServlet</servlet-name>
		<url-pattern>/machine/tempAddShoppingCart</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>tempUpdateShoppingCartServlet</servlet-name>
		<url-pattern>/machine/tempUpdateShoppingCart</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
